<template>
  <view wx:if="{{show}}" class="sign">
    <sign-in :switchable="switchable"/>
  </view>
</template>

<script>
import wepy from "wepy";
import { api, root } from "@/config";
import request from "@/utils/request";
import { getCookies } from "@/utils/format";
import SignIn from "../auth/sign-in";
export default class extends wepy.component {
  props = {
    show: {
      type: Boolean,
      default: false
    }
  };

  data = {
    switchable: false
  };

  components = {
    "sign-in": SignIn
  };

  watch = {
    show(visible) {
      if (visible) {
        wx.setNavigationBarTitle({
          title: "登录"
        });
      }
    }
  };

  events = {
    onSignIn(args) {
      this.login(args);
    },
    onSwitchForget() {
      console.log("forget");
    }
  };

  async login(args) {
    args.openid = this.$root.$parent.globalData.openid;
    try {
      wx.showLoading({
        title: "正在登录..."
      });

      const { header, data: staff } = await request(
        api.staffLogin,
        {
          method: "POST",
          data: {
            phone: args.phone,
            password: args.password,
            openid: this.$root.$parent.globalData.openid,
            vcode: args.vcode
          }
        },
        false
      );

      const globalData = this.$root.$parent.globalData;
      const cookies = getCookies(header["Set-Cookie"] || header["set-cookie"]);
      this.$root.$parent.changeRole("staff");
      this.$root.$parent.storeCookies(cookies);
      wx.reLaunch({
        url: "/pages/staff/index"
      });
    } catch (err) {
      wx.showModal({
        showCancel: false,
        title: "提示",
        content: err.message
      });
    } finally {
      wx.hideLoading();
    }
  }
}
</script>